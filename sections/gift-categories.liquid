<section class="gift-categories">
  <div class="section-header">
    <div>
      <p class="section-eyebrow">{{ section.settings.eyebrow }}</p>
      <h2>{{ section.settings.title }}</h2>
      {% if section.settings.description != blank %}
        <p class="section-description">{{ section.settings.description }}</p>
      {% endif %}
    </div>
  </div>
  <div class="gift-categories__grid">
    {% for block in section.blocks %}
      <a class="gift-category" href="{{ block.settings.link }}" {{ block.shopify_attributes }}>
        {% if block.settings.image != blank %}
          <img src="{{ block.settings.image | image_url: width: 600 }}" alt="{{ block.settings.title }}" loading="lazy">
        {% endif %}
        <div class="gift-category__content">
          <h3>{{ block.settings.title }}</h3>
          <span class="gift-category__cta">{{ block.settings.cta_label }}</span>
        </div>
      </a>
    {% endfor %}
  </div>
</section>

{% schema %}
{
  "name": "Gift categories",
  "settings": [
    {
      "type": "text",
      "id": "eyebrow",
      "label": "Eyebrow",
      "default": "Catégories par pratique"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Choisis selon ton terrain"
    },
    {
      "type": "text",
      "id": "description",
      "label": "Description",
      "default": "Des sélections claires pour éviter les erreurs de choix."
    }
  ],
  "blocks": [
    {
      "type": "category",
      "name": "Category",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Randonnée"
        },
        {
          "type": "text",
          "id": "cta_label",
          "label": "CTA label",
          "default": "Voir la sélection"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "max_blocks": 4,
  "presets": [
    {
      "name": "Gift categories",
      "blocks": [
        { "type": "category" },
        { "type": "category" },
        { "type": "category" },
        { "type": "category" }
      ]
    }
  ]
}
{% endschema %}
