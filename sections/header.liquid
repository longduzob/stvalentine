<section class="announcement-bar">
  <div class="announcement-bar__inner">
    <span class="announcement-bar__text">{{ section.settings.announcement_text }}</span>
    {% if section.settings.announcement_link != blank %}
      <a class="announcement-bar__link" href="{{ section.settings.announcement_link }}">
        {{ section.settings.announcement_link_label }}
      </a>
    {% endif %}
  </div>
</section>

<header class="site-header">
  <div class="site-header__inner">
    <nav class="site-header__nav" aria-label="{{ 'sections.header.menu' | t }}">
      {% if section.settings.menu != blank %}
        <ul class="site-header__menu">
          {% for link in linklists[section.settings.menu].links %}
            <li class="site-header__menu-item">
              <a href="{{ link.url }}" class="site-header__link">{{ link.title }}</a>
            </li>
          {% endfor %}
          <li class="site-header__menu-item">
            <a href="{{ section.settings.catalogue_link }}" class="site-header__link">{{ section.settings.catalogue_label }}</a>
          </li>
        </ul>
      {% endif %}
    </nav>

    <div class="site-header__logo">
      <a href="{{ routes.root_url }}" class="site-header__logo-link">
        {% if section.settings.logo != blank %}
          <img
            src="{{ section.settings.logo | image_url: width: 300 }}"
            alt="{{ shop.name }}"
            loading="lazy"
            width="{{ section.settings.logo.width }}"
            height="{{ section.settings.logo.height }}"
          >
        {% else %}
          <span>{{ section.settings.logo_text }}</span>
        {% endif %}
        <span class="site-header__heart">{% render 'icon-heart' %}</span>
      </a>
      {% if section.settings.show_valentine_badge %}
        <span class="site-header__badge">{{ section.settings.valentine_badge_text }}</span>
      {% endif %}
    </div>

    <div class="site-header__icons">
      <a href="{{ routes.search_url }}" class="site-header__icon" aria-label="{{ 'general.search' | t }}">
        {% render 'icon-search' %}
      </a>
      <a href="{{ routes.account_url }}" class="site-header__icon" aria-label="{{ 'general.account' | t }}">
        {% render 'icon-account' %}
      </a>
      <a href="{{ routes.cart_url }}" class="site-header__icon" aria-label="{{ 'general.cart' | t }}">
        {% render 'icon-cart' %}
        <span class="site-header__cart-count">{{ cart.item_count }}</span>
      </a>
    </div>
  </div>
</header>

{% schema %}
{
  "name": "Header",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    },
    {
      "type": "text",
      "id": "logo_text",
      "label": "Logo text",
      "default": "ORIENT OUTDOOR"
    },
    {
      "type": "link_list",
      "id": "menu",
      "label": "Menu",
      "default": "main-menu"
    },
    {
      "type": "text",
      "id": "catalogue_label",
      "label": "Catalogue label",
      "default": "Équipement"
    },
    {
      "type": "url",
      "id": "catalogue_link",
      "label": "Catalogue link",
      "default": "/collections/all"
    },
    {
      "type": "text",
      "id": "announcement_text",
      "label": "Announcement text",
      "default": "Conseils terrain + expédition 48h depuis la France"
    },
    {
      "type": "text",
      "id": "announcement_link_label",
      "label": "Announcement button label",
      "default": "Voir l'équipement"
    },
    {
      "type": "url",
      "id": "announcement_link",
      "label": "Announcement button link",
      "default": "/collections/all"
    },
    {
      "type": "checkbox",
      "id": "show_valentine_badge",
      "label": "Show advisor badge",
      "default": true
    },
    {
      "type": "text",
      "id": "valentine_badge_text",
      "label": "Advisor badge text",
      "default": "Guide terrain indépendant"
    }
  ]
}
{% endschema %}
