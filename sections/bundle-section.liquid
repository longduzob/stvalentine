<section class="bundle-section">
  <div class="section-header">
    <div>
      <p class="section-eyebrow">{{ section.settings.eyebrow }}</p>
      <h2>{{ section.settings.title }}</h2>
      <p class="section-description">{{ section.settings.description }}</p>
    </div>
    {% if section.settings.cta_label != blank %}
      <a class="button button--primary" href="{{ section.settings.cta_link }}">{{ section.settings.cta_label }}</a>
    {% endif %}
  </div>
  <div class="bundle-section__grid">
    {% for block in section.blocks %}
      {% if block.settings.product != blank %}
        {% assign bundle_product = all_products[block.settings.product] %}
        <article class="product-card" {{ block.shopify_attributes }}>
          <a href="{{ bundle_product.url }}" class="product-card__image">
            {% if bundle_product.featured_image %}
              <img src="{{ bundle_product.featured_image | image_url: width: 500 }}" alt="{{ bundle_product.title }}" loading="lazy">
            {% endif %}
          </a>
          <div class="product-card__info">
            <h3><a href="{{ bundle_product.url }}">{{ bundle_product.title }}</a></h3>
            <p class="product-card__price">{{ bundle_product.price | money }}</p>
            <span class="badge">{{ block.settings.badge_label }}</span>
          </div>
        </article>
      {% endif %}
    {% endfor %}
  </div>
</section>

{% schema %}
{
  "name": "Bundle section",
  "settings": [
    {
      "type": "text",
      "id": "eyebrow",
      "label": "Eyebrow",
      "default": "Offre pack"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Bundles & économies"
    },
    {
      "type": "text",
      "id": "description",
      "label": "Description",
      "default": "Combine deux cadeaux pour un effet wow + économies exclusives."
    },
    {
      "type": "text",
      "id": "cta_label",
      "label": "Button label",
      "default": "Ajouter le pack"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "Button link",
      "default": "/cart"
    }
  ],
  "blocks": [
    {
      "type": "bundle_item",
      "name": "Bundle item",
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Product"
        },
        {
          "type": "text",
          "id": "badge_label",
          "label": "Badge label",
          "default": "Pack cadeau"
        }
      ]
    }
  ],
  "max_blocks": 3,
  "presets": [
    {
      "name": "Bundle section",
      "blocks": [
        { "type": "bundle_item" },
        { "type": "bundle_item" }
      ]
    }
  ]
}
{% endschema %}
