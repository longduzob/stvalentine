<section class="social-proof">
  <div class="social-proof__inner">
    <div>
      <p class="section-eyebrow">{{ section.settings.eyebrow }}</p>
      <h2>{{ section.settings.title }}</h2>
      <p class="section-description">{{ section.settings.description }}</p>
    </div>
    <div class="social-proof__stats">
      {% for block in section.blocks %}
        <div class="social-proof__stat" {{ block.shopify_attributes }}>
          <strong>{{ block.settings.value }}</strong>
          <span>{{ block.settings.label }}</span>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Social proof",
  "settings": [
    {
      "type": "text",
      "id": "eyebrow",
      "label": "Eyebrow",
      "default": "Retours terrain"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Ce que disent les pratiquants"
    },
    {
      "type": "text",
      "id": "description",
      "label": "Description",
      "default": "Notes honnêtes, avec points forts et limites."
    }
  ],
  "blocks": [
    {
      "type": "stat",
      "name": "Stat",
      "settings": [
        {
          "type": "text",
          "id": "value",
          "label": "Value",
          "default": "4,8/5"
        },
        {
          "type": "text",
          "id": "label",
          "label": "Label",
          "default": "Avis vérifiés"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Social proof",
      "blocks": [
        { "type": "stat" },
        { "type": "stat" },
        { "type": "stat" }
      ]
    }
  ]
}
{% endschema %}
