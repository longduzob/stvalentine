<section class="hero" style="background-image: url({{ section.settings.background_image | image_url: width: 2000 }});">
  <div class="hero__overlay"></div>
  <div class="hero__content">
    <p class="hero__eyebrow">{{ section.settings.eyebrow }}</p>
    <h1>{{ section.settings.heading }}</h1>
    <p class="hero__subheading">{{ section.settings.subheading }}</p>
    {% if section.settings.cta_label != blank %}
      <a class="button button--primary" href="{{ section.settings.cta_link }}">{{ section.settings.cta_label }}</a>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Hero banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background image"
    },
    {
      "type": "text",
      "id": "eyebrow",
      "label": "Eyebrow",
      "default": "t:sections.hero.eyebrow"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "t:sections.hero.heading"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "t:sections.hero.subheading"
    },
    {
      "type": "text",
      "id": "cta_label",
      "label": "Button label",
      "default": "t:sections.hero.cta"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "Button link"
    }
  ],
  "presets": [
    {
      "name": "Hero banner"
    }
  ]
}
{% endschema %}
