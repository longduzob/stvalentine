<section class="hero" style="background-image: url({{ section.settings.background_image | image_url: width: 2000 }});">
  <div class="hero__overlay"></div>
  <div class="hero__content">
    <p class="hero__eyebrow">{{ section.settings.eyebrow }}</p>
    <h1>{{ section.settings.heading }}</h1>
    <p class="hero__subheading">{{ section.settings.subheading }}</p>
    <div class="hero__actions">
      {% if section.settings.cta_label != blank %}
        <a class="button button--primary" href="{{ section.settings.cta_link }}">{{ section.settings.cta_label }}</a>
      {% endif %}
      {% if section.settings.secondary_cta_label != blank %}
        <a class="button button--secondary" href="{{ section.settings.secondary_cta_link }}">{{ section.settings.secondary_cta_label }}</a>
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Hero banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background image"
    },
    {
      "type": "text",
      "id": "eyebrow",
      "label": "Eyebrow",
      "default": "Saint-Valentin 2026"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Offrez un moment inoubliable."
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Bouquets, cadeaux viraux TikTok, coffrets romantiques — prêts à offrir."
    },
    {
      "type": "text",
      "id": "cta_label",
      "label": "Button label",
      "default": "Découvrir la collection"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "Button link",
      "default": "/collections/all"
    },
    {
      "type": "text",
      "id": "secondary_cta_label",
      "label": "Secondary button label",
      "default": "Idées cadeaux"
    },
    {
      "type": "url",
      "id": "secondary_cta_link",
      "label": "Secondary button link",
      "default": "/collections/all"
    }
  ],
  "presets": [
    {
      "name": "Hero banner"
    }
  ]
}
{% endschema %}
