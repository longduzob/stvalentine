<section class="product-highlight">
  <div class="product-highlight__media">
    {% if section.settings.image != blank %}
      <img src="{{ section.settings.image | image_url: width: 900 }}" alt="{{ section.settings.title }}" loading="lazy">
    {% elsif section.settings.product != blank and all_products[section.settings.product].featured_image %}
      <img src="{{ all_products[section.settings.product].featured_image | image_url: width: 900 }}" alt="{{ all_products[section.settings.product].title }}" loading="lazy">
    {% endif %}
  </div>
  <div class="product-highlight__content">
    <p class="section-eyebrow">{{ section.settings.eyebrow }}</p>
    <h2>{{ section.settings.title }}</h2>
    <p class="section-description">{{ section.settings.description }}</p>
    {% if section.settings.cta_label != blank %}
      <a class="button button--primary" href="{{ section.settings.cta_link }}">{{ section.settings.cta_label }}</a>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Product highlight",
  "settings": [
    {
      "type": "product",
      "id": "product",
      "label": "Product"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image override"
    },
    {
      "type": "text",
      "id": "eyebrow",
      "label": "Eyebrow",
      "default": "Focus équipement"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Tente 3 saisons : le bon choix si tu pars souvent"
    },
    {
      "type": "text",
      "id": "description",
      "label": "Description",
      "default": "Léger, fiable, mais pas pour l'usage hiver engagé."
    },
    {
      "type": "text",
      "id": "cta_label",
      "label": "Button label",
      "default": "Voir le produit"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "Button link",
      "default": "/collections/all"
    }
  ],
  "presets": [
    {
      "name": "Product highlight"
    }
  ]
}
{% endschema %}
