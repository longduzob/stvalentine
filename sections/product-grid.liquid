<section class="product-grid" data-layout="{{ section.settings.layout }}">
  <div class="section-header">
    <div>
      <p class="section-eyebrow">{{ section.settings.eyebrow }}</p>
      <h2>{{ section.settings.title }}</h2>
      {% if section.settings.description != blank %}
        <p class="section-description">{{ section.settings.description }}</p>
      {% endif %}
    </div>
    {% if section.settings.cta_label != blank %}
      <a class="button button--secondary" href="{{ section.settings.cta_link }}">{{ section.settings.cta_label }}</a>
    {% endif %}
  </div>

  {% if section.settings.collection != blank %}
    <div class="product-grid__items product-grid__items--{{ section.settings.layout }} product-grid__items--cols-{{ section.settings.columns }}">
      {% for product in collections[section.settings.collection].products limit: section.settings.product_limit %}
        <article class="product-card">
          <a href="{{ product.url }}" class="product-card__image">
            {% if product.featured_image %}
              <img
                src="{{ product.featured_image | image_url: width: 600 }}"
                alt="{{ product.title }}"
                loading="lazy"
              >
            {% endif %}
            {% if section.settings.show_badges %}
              <div class="product-card__badges">
                <span class="badge">{{ section.settings.badge_label }}</span>
                {% if product.tags contains 'best-seller' %}
                  <span class="badge badge--outline">Best Seller</span>
                {% endif %}
              </div>
            {% endif %}
          </a>
          <div class="product-card__info">
            <h3><a href="{{ product.url }}">{{ product.title }}</a></h3>
            <p class="product-card__price">{{ product.price | money }}</p>
            <form method="post" action="/cart/add">
              <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
              <button type="submit" class="button button--secondary">{{ section.settings.add_to_cart_label }}</button>
            </form>
          </div>
        </article>
      {% endfor %}
    </div>
  {% else %}
    <p>{{ 'sections.collection.empty' | t }}</p>
  {% endif %}
</section>

{% schema %}
{
  "name": "Product grid",
  "settings": [
    {
      "type": "text",
      "id": "eyebrow",
      "label": "Eyebrow",
      "default": "Coup de cœur"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Best Sellers Saint-Valentin"
    },
    {
      "type": "text",
      "id": "description",
      "label": "Description",
      "default": "Les cadeaux les plus partagés sur TikTok et Instagram."
    },
    {
      "type": "text",
      "id": "cta_label",
      "label": "CTA label",
      "default": "Voir tout"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "CTA link",
      "default": "/collections/all"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "range",
      "id": "product_limit",
      "label": "Products to show",
      "min": 2,
      "max": 12,
      "step": 1,
      "default": 6
    },
    {
      "type": "select",
      "id": "columns",
      "label": "Columns",
      "options": [
        { "value": "2", "label": "2" },
        { "value": "3", "label": "3" },
        { "value": "4", "label": "4" }
      ],
      "default": "3"
    },
    {
      "type": "select",
      "id": "layout",
      "label": "Layout",
      "options": [
        { "value": "grid", "label": "Grid" },
        { "value": "carousel", "label": "Carousel" }
      ],
      "default": "grid"
    },
    {
      "type": "checkbox",
      "id": "show_badges",
      "label": "Show badges",
      "default": true
    },
    {
      "type": "text",
      "id": "badge_label",
      "label": "Badge label",
      "default": "Idée cadeau"
    },
    {
      "type": "text",
      "id": "add_to_cart_label",
      "label": "Add to cart label",
      "default": "Ajouter"
    }
  ],
  "presets": [
    {
      "name": "Product grid"
    }
  ]
}
{% endschema %}
